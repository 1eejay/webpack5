{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}
